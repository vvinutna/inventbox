    var form = document.getElementById("addCategoryForm");
    var categoryName = form.elements[0].value;
    var id = JSON.parse('<%= id %>');

    $.ajax({
      type: 'POST',
      url: '/api/categories',
      data: { category: categoryName, uid: id }
    });
    alert("The category has been added!");
  }
}

