<!DOCTYPE html>
<html>

<% include ../partials/stylesheetLinks %>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <% include ../partials/header %>

  <% include ../partials/nav %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Items
        <small>Update the inventory with any changes in stock items.</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Update Stock</li>
        <li class="active">Items</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">

        <div class="col-md-6">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add an Item</h3>
            </div>
          <div>
          <form role="form" id="newItemForm">
              <div class="box-body">
              <div class="form-group">
                  <label for="input1">Item Name</label>
                  <input type="text" class="form-control" id="input1" placeholder="Enter name" required="required">
              </div>
              <div class="form-group">
                <label for="input2">Units</label>
                <input type="text" class="form-control" id="input2" placeholder="Enter units" required="required">
              </div>
              <div class="form-group">
                <label for="input3">Reorder Quantity</label>
                <input type="number" class="form-control" id="input3" placeholder="Enter reorder quantity" required="required">
              </div>
              <div class="form-group">
                  <label>Select Category</label>
                  <select class="form-control" required="required">
                    <% results.forEach(function(result) { %>
                      <option><%= result.category_name %></option>
                    <% }); %>
                  </select>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Add</button>
              </div>
            </form>
          </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Remove an Item</h3>
            </div>
          <div>
            <form id="removeItemForm" role="form">
                              <div class="box-body">
              <div class="form-group">
                  <label for="input1">Select Item</label>
                    <select class="form-control" required="required">
                      <% results.forEach(function(result) { %>
                        <option><%= result.name %></option>
                      <% }); %>
                    </select>
                  </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Remove</button>
              </div>
              </form>
          </div>
          </div>
        </div>

      </div>
    </section>
    <!-- /.content -->
  </div>

</div>
<!-- ./wrapper -->

<% include ../partials/scripts %>

<script>

  $("#newItemForm").submit(function(event) {
    var form = document.getElementById("newItemForm");
    var itemName = form.elements[0].value;
    console.log(itemName);
    var units = form.elements[1].value;
    var reorderQuantity = form.elements[2].value;
    var categoryName = form.elements[3].value;
    console.log(categoryName);
    $.ajax({
      type: 'POST',
      url: '/api/products',
      data: { itemName: itemName, categoryName: categoryName, units: units},
    });
    alert("The new item has been added!");
  });

  $("#removeItemForm").submit(function(event) {
    var form = document.getElementById("removeItemForm");
    var itemName = form.elements[0].value;
    
    $.ajax({
      type: 'DELETE',
      url: '/api/products/' + itemName,
      data: { itemName : itemName }
    });
    alert("The item has been deleted!");
  });
</script>

</body>
</html>

